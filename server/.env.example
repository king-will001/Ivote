PORT=5000
NODE_ENV=development

# Database
MONGO_URL=
MONGO_FORCE_IPV4=true
MONGO_SERVER_SELECTION_TIMEOUT_MS=10000
MONGO_CONNECT_TIMEOUT_MS=10000
MONGO_SOCKET_TIMEOUT_MS=20000

# CORS
CLIENT_ORIGIN=http://localhost:3000
CLIENT_ORIGINS=
ALLOW_NULL_ORIGIN=false
TRUST_PROXY=false

# Auth
JWT_SECRET=
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
AUTH_COOKIE_SAMESITE=lax
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_DOMAIN=

# Admin
ADMIN_EMAILS=

# Email (OTP) - SMTP
SMTP_HOST=
SMTP_PORT=465
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=true
EMAIL_FROM=
OTP_LENGTH=6
OTP_TTL_MINUTES=10
OTP_MAX_ATTEMPTS=5

# CSRF
CSRF_ENABLED=true
CSRF_COOKIE_NAME=csrf-token
CSRF_HEADER_NAME=x-csrf-token
CSRF_SAMESITE=lax
CSRF_SECURE=false
CSRF_MAX_AGE=0
CSRF_ALLOW_NO_ORIGIN=true

# Redis (rate limiting)
REDIS_URL=
REDIS_PASSWORD=
REDIS_ENABLED=false

# Cloudinary (private assets)
FILE_STORAGE_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Optional: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=
CLOUDINARY_UPLOAD_TYPE=authenticated
CLOUDINARY_DELIVERY_TYPE=authenticated
CLOUDINARY_SIGNED_URL_TTL_SECONDS=300
CLOUDINARY_FOLDER_PREFIX=ivote
